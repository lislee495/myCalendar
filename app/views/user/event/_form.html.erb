<%= form_for :event do |f| %>
<%= f.label :short_description %>
<%= f.text_field :short_description %>
<%= f.label :date %>
<%= f.date_field :date%>
<%= f.label :time %>
<%= f.time_field :time %>
<%= f.label :additional_info %>
<%= f.text_field :additional_info %>
<%= f.label :category_ids %>
<%= f.text_field :category_ids, list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <% Category.all.each do |category| %>
      <option value="<%= category.name %>">
    <% end %>
  </datalist>
<%= f.label :users, "Add Friends" %>
<%= f.collection_select :users, User.all, :id, :username %>
<%= f.submit %>
<% end %>
