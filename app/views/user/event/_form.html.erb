
<%= f.label :short_description %>
<%= f.text_field :short_description %>
<%= f.label :date %>
<%= f.date_field :date%>
<%= f.label :time %>
<%= f.time_field :time %>
<%= f.label :additional_info %>
<%= f.text_field :additional_info %>
<%= f.label :categories, 'Category'%>
<%= f.fields_for :categories, @event.categories.build do |categories_fields| %>
<%= categories_fields.text_field :name,  list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <% Category.all.each do |category| %>
      <option value="<%= category.name %>">
    <% end %>
  </datalist>
  <%end%>
<%= f.label :user_id, "Add Friends" %>
<%= f.collection_select :user_id, User.all, :id, :email %>
<%= f.submit %>
