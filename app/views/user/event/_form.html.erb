      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div >


<%= f.label :short_description %>
<%= f.text_field :short_description %> <br>
<%= f.label :date %>
<%= f.date_field :date%> <br>
<%= f.label :start_time %>
<%= f.time_field :start_time %> <br>
<%= f.label :end_time %>
<%= f.time_field :end_time %> <br>
<%= f.label :additional_info %>
<%= f.text_field :additional_info %> <br>
<%= f.label :categories_attributes, 'Category'%>
<%= f.fields_for :categories_attributes, @event.categories.build do |categories_fields| %>
<%= categories_fields.text_field :name%>
<%= categories_fields.hidden_field(:owner_id, value: current_user.id)%>
  <%end%> <br>
<%= f.label :user_ids, "Add Your Friends" %> 
<%= f.collection_select :user_ids, current_user.friends.all, :id, :email, :include_blank => true%> <br>
<%= f.submit %>
</div>
