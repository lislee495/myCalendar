<%= form_for :friendship, :url => { :action => "create" }, class: "form" do |f| %>
<%= f.label :email, "Find Using Their Email:" %>
<%= f.collection_select :user_id, User.all_except(current_user_friends), :id, :email, :include_blank => true%>
<%= f.submit "Add Friend", class: "button"%>
<% end %>

